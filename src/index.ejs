            <section class="flex mt-2 flex-wrap gap-3">
                <p class="w-full text-xs font-medium text-gray-700">Class:</p>

                <% for(let i=7; i <=12; i++) { %>
                    <div>
                        <label for="class<%= i %>"
                            class="flex shadow-sm cursor-pointer items-center justify-center rounded-md border border-gray-200 bg-white px-3 py-2 text-gray-900 hover:border-gray-200 has-[:checked]:border-blue-500 has-[:checked]:bg-blue-500 has-[:checked]:text-white">
                            <input type="radio" name="class_year" value="<%= i %>" id="class<%= i %>" class="sr-only"
                                <%=i==7 ? "checked" : "" %> />

                            <p class="text-sm font-medium">
                                <%= i %>
                            </p>
                        </label>
                    </div>
                    <% } %>



            </section>
            <section class="flex mt-2 flex-wrap gap-3">
                <p class="w-full text-xs font-medium text-gray-700">Index:</p>

                <% for(let i=1; i <=6; i++) { %>
                    <div>
                        <label for="index<%= i %>"
                            class="flex shadow-sm cursor-pointer items-center justify-center rounded-md border border-gray-200 bg-white px-3 py-2 text-gray-900 hover:border-gray-200 has-[:checked]:border-blue-500 has-[:checked]:bg-blue-500 has-[:checked]:text-white">
                            <input type="radio" name="index" value="<%= i %>" id="index<%= i %>" class="sr-only" <%=i==1
                                ? "checked" : "" %> />

                            <p class="text-sm font-medium">
                                <%= i %>
                            </p>
                        </label>
                    </div>
                    <% } %>

            </section>
            <section class="mt-2">
                <p class="text-xs mb-2 font-medium text-gray-700">What is your level of programming?</p>
                <select
                    class="py-3 px-4 pe-9 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                    name="level" required>
                    <option value="newbie">Newbie</option>
                    <option value="begginer">Begginer</option>
                    <option value="intermediate">Intermediate</option>
                    <option value="advanced" disabled>You do not need to submit if you are advanced</option>
                </select>
            </section>
            <div class="mt-5">
                <button
                    class="rounded bg-blue-500 px-12 py-3 text-sm font-medium text-white shadow hover:bg-blue-600 focus:outline-none focus:ring active:bg-blue-400 sm:w-auto">
                    Submit
                </button>
            </div>
